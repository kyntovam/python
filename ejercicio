    def crear(self):
        archivo=open('datos.csv','a')
        archivo.close()
        
#     

    def grabar(self):
        archivo=open('datos.csv','a')
        tx1=raw_input('como te llamas')
        print tx1
        archivo.write(tx1)
        archivo.write(',')
        print 'hola',tx1,'un gusto a saludarte'
        tx2=raw_input('y dime que haces')
        print tx2
        archivo.write(tx2)
        archivo.write('\n')
        archivo.close()
        
    def listar(self):
        leer=open('datos.csv')
#        print leer.read()
        for i in leer:
            print i
        leer.close()   
         
    def conver(self):
        leer=open('datos.csv')
        lista=[]
        for i in csv.reader(leer):
            lista.append(i)
        random.shuffle(lista)    
        print lista
        print len(lista)
              
            
               
        
        
